{{#import templateName=this/renderTemplate context=this title="Bài kiểm tra"}}
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      Bài kiểm tra
    </h1>
    <a
      href="#"
      id="add-x-btn"
      class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
    >
      <i class="fas fa-plus fa-sm text-white-50"></i>
      Thêm Bài kiểm tra
    </a>
  </div>
  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Tra Cứu
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <form method="POST" action="find">
            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="inputName">
                  Tên
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="inputName"
                  name="inputName"
                  placeholder="Tên"
                 />

                <small id="passwordHelpBlock" class="form-text text-muted">
                  Hướng dẫn tìm kiếm: [MÃ MÔN HỌC]&lt;dấu cách&gt;[NĂM HỌC]&lt;dấu cách&gt;[LỚP]
                </small>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">
              Tìm
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Danh sách môn học theo bộ lọc
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="custom-table"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  {{#each headers}}
                    <td>
                      {{this}}
                    </td>
                  {{/each}}
                </tr>
              </thead>
              <tfoot>
                <tr>
                  {{#each headers}}
                    <td>
                      {{this}}
                    </td>
                  {{/each}}
                </tr>
              </tfoot>
              <tbody>
                {{#each exams}}
                  <tr>
                    <td>
                      <a href="/subjects/{{_id}}">
                        {{_id}}
                      </a>
                    </td>
                    <td>
                      {{name}}
                    </td>
                    <td>
                      {{code}}
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <!-- Main Area -->
    <div id="add-x-card" class="col-xl-12 col-lg-12 d-none">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Thêm bài kiểm tra
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <form id="add-x-form" method="POST" action="add">
            <div class="form-group">
              <label for="inputSubName">
                Môn học
              </label>
              <select
                id="inputSubName"
                name="inputSubName"
                class="form-control"
              >
                {{#each subjects}}
                  <option value={{_id}}>
                    {{name}}
                  </option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <label for="inputSubType">
                Loai
              </label>
              <select
                class="form-control"
                id="inputSubType"
                name="inputSubType"
              >
                {{#each scoreCriteria}}
                  <option value={{_id}}>
                    {{description}}
                  </option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <label for="inputSubDate">
                Ngày kiểm tra
              </label>
              <input
                type="date"
                class="form-control"
                id="inputSubDate"
                name="inputSubDate"
              />
            </div>
            <div class="form-group">
              <label for="inputSubClass">
                Lớp
              </label>
              <select
                class="form-control"
                id="inputSubClass"
                name="inputSubClass"
              >
                {{#each classes}}
                  <option value={{_id}}>
                    {{fullClassName}} - Năm học {{this/schoolYear/schoolYear}}
                  </option>
                {{/each}}
              </select>
            </div>
            <hr />
            <a
              href="#"
              class="btn btn-primary btn-icon-split"
              id="submit-x-btn"
            >
              <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
              </span>
              <span class="text">
                Thêm Bài kiểm tra
              </span>
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/button-actions.js"></script>
  <script src="/js/custom-table.js"></script>
{{/import}}