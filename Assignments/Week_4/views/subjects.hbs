{{#import templateName="index-admin" context=this title="môn học"}}
    <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      Môn Học
    </h1>
    <a
      href="#"
      id="add-x-btn"
      class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
    >
      <i class="fas fa-plus fa-sm text-white-50"></i>
      Thêm Môn học
    </a>
  </div>
  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Danh sách môn học
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <div class="table-responsive">
      <table class="table table-bordered" id="custom-table" width="100%" cellspacing="0">
        <thead>
          <tr>
            {{#each headers}}
            <td>{{this}}</td>
            {{/each}}
          </tr>
        </thead>
        <tfoot>
          <tr>
            {{#each headers}}
            <td>{{this}}</td>
            {{/each}}
          </tr>
        </tfoot>
        <tbody>
          {{#each subjects}}
          <tr>
            <td><a href="/subjects/{{_id}}">{{_id}}</a></td>
            <td>{{name}}</td>
            <td>{{code}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Tra Cứu
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <form method="POST" action="find">
            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="inputName">
                  Tên
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="inputName"
                  name="inputName"
                  placeholder="Tên"
                 />

              </div>
            </div>
            <button type="submit" class="btn btn-primary">
              Tìm
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12 d-none">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Danh sách Giáo viên
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body"></div>
      </div>
    </div>
  </div>
  <div class="row">
    <!-- Main Area -->
    <div id="add-x-card" class="col-xl-12 col-lg-12 d-none">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Thêm môn học
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <form id="add-x-form" method="POST" action="add">
            <div class="form-group">
              <label for="inputSubName">
                Tên môn học
              </label>
              <input
                type="text"
                id="inputSubName"
                name="inputSubName"
                class="form-control"
                placeholder="Tên môn học"
              />
            </div>
            <div class="form-group">
              <label for="inputSubCode">
                Mã môn học
              </label>
              <input
                type="text" 
                class="form-control"
                id="inputSubCode"
                name="inputSubCode"
                placeholder="Mã môn học"
               />

            </div>
            <hr />
            <fieldset
              class="form-group"
              name="parentsInfo"
              id="x-form-group"
            >
              <legend>
                GV phụ trách
              </legend>
              <div id="x-info">
                <!-- This is where all the parents info gets grouped -->
                <div class="card bg-light mb-3 p-3 d-none x-input">
                  <div class="form-group">
                    <label for="inputSubTeaName">
                      Tên
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      name="inputSubTeaName"
                      id="inputSubTeaName"
                      placeholder="Tên"
                     />

                  </div>
                  <div class="form-group">
                    <label for="inputSubTeaSub">
                      GV dạy thay?
                    </label>
                    <select
                      class="form-control"
                      name="inputSubTeaSub"
                      id="inputSubTeaSub"
                     >
                      <option value="1">Có</option>
                      <option value="0">Không</option>
                     </select>

                  </div>
                  <div class="d-flex justify-content-end">
                    <a
                      href=""
                      class="badge badge-error parents-form-group-remove-btn"
                    >
                      Xóa
                    </a>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-end">
                <a
                  href="#"
                  class="badge badge-primary p-2"
                  id="x-form-group-add-btn"
                >
                  Thêm GV phụ trách
                </a>
              </div>
            </fieldset>
            <hr />
            <a
              href="#"
              class="btn btn-primary btn-icon-split"
              id="submit-x-btn"
            >
              <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
              </span>
              <span class="text">
                Thêm Môn học
              </span>
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/button-actions.js"></script>
  <script src="/js/custom-table.js"></script>
{{/import}}