{{#import templateName=this/renderTemplate context=this title="Học sinh"}}
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
      Học sinh
    </h1>
    <a
      href="#"
      id="add-x-btn"
      class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
    >
      <i class="fas fa-plus fa-sm text-white-50"></i>
      Thêm Học sinh
    </a>
  </div>
  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Tra Cứu
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <form method="POST" action="find">
            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="inputName">
                  Tên
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="inputName"
                  name="inputName"
                  placeholder="Tên"
                 />

              </div>
            </div>
            <button type="submit" class="btn btn-primary">
              Tìm
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-12 col-lg-12 d-none">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Danh sách học sinh
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body"></div>
      </div>
    </div>
  </div>
  <div class="row">
    <!-- Main Area -->
    <div id="add-x-card" class="col-xl-12 col-lg-12 d-none">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">
            Thêm học sinh
          </h6>
          <div class="dropdown no-arrow"></div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <form id="add-x-form" method="POST" action="add">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputStdName">
                  Họ Tên
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="inputStdName"
                  name="inputStdName"
                  placeholder="Họ Tên"
                 />

              </div>
              <div class="form-group col-md-6">
                <label for="inputStdDob">
                  Ngày sinh
                </label>
                <input
                  type="date"
                  class="form-control"
                  id="inputStdDob"
                  name="inputStdDob"
                  placeholder="Ngày sinh"
                 />

              </div>
            </div>
            <div class="form-group">
              <label for="inputStdGender">
                Giới tính
              </label>
              <select
                id="inputStdGender"
                name="inputStdGender"
                class="form-control"
              >
                <option value="NAM" selected>
                  Nam
                </option>
                <option value="NU">
                  Nữ
                </option>
              </select>
            </div>
            <div class="form-group">
              <label for="inputStdTel">
                Số ĐT
              </label>
              <input
                type="text"
                class="form-control"
                id="inputStdTel"
                name="inputStdTel"
                placeholder="Số ĐT"
               />

            </div>
            <div class="form-group">
              <label for="inputStdAddr">
                Địa chỉ
              </label>
              <input
                type="text"
                class="form-control"
                id="inputStdAddr"
                name="inputStdAddr"
                placeholder="Địa chỉ"
               />

            </div>
            <div class="form-group">
              <label for="inputStdUsername">
                Username
              </label>
              <input
                type="text"
                class="form-control"
                id="inputStdUsername"
                name="inputStdUsername"
                placeholder="Username"
               />

            </div>
            <div class="form-group">
              <label for="inputStdEmail">
                Email
              </label>
              <input
                type="email"
                class="form-control"
                id="inputStdEmail"
                name="inputStdEmail"
                placeholder="Email"
               />

            </div>
            <div class="form-group">
              <label for="inputStdPassword">
                Mật khẩu
              </label>
              <input
                type="password"
                class="form-control"
                id="inputStdPassword"
                name="inputStdPassword"
                placeholder="Mật khẩu"
               />

            </div>
            <hr />
            <fieldset
              class="form-group"
              name="parentsInfo"
              id="x-form-group"
            >
              <legend>
                Thông tin cha mẹ/người giám hộ
              </legend>
              <div id="x-info">
                <!-- This is where all the parents info gets grouped -->
                <div class="card bg-light mb-3 p-3 d-none x-input">
                  <div class="form-group">
                    <label for="inputParName">
                      Họ Tên
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      name="inputParName"
                      id="inputParName"
                      placeholder="Họ Tên"
                     />

                  </div>
                  <div class="form-group">
                    <label for="inputParDob">
                      Ngày Sinh
                    </label>
                    <input
                      type="date"
                      class="form-control"
                      name="inputParDob"
                      id="inputParDob"
                      placeholder="Ngày Sinh"
                     />

                  </div>
                  <div class="form-group">
                    <label for="inputParGender">
                      Giới tính
                    </label>
                    <select
                      id="inputParGender"
                      name="inputParGender"
                      class="form-control"
                    >
                      <option value="NAM" selected>
                        Nam
                      </option>
                      <option value="NU">
                        Nữ
                      </option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="inputParTel">
                      Số ĐT
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      name="inputParTel"
                      id="inputParTel"
                      placeholder="Số ĐT"
                     />

                  </div>
                  <div class="form-group">
                    <label for="inputParAddr">
                      Địa chỉ
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      name="inputParAddr"
                      id="inputParAddr"
                      placeholder="Địa chỉ"
                     />

                  </div>
                  <div class="form-group">
                    <label for="inputParEmail">
                      Email
                    </label>
                    <input
                      type="email"
                      class="form-control"
                      name="inputParEmail"
                      id="inputParEmail"
                      placeholder="Ngày Sinh"
                     />

                  </div>
                  <div class="form-group">
                    <label for="inputParOcc">
                      Nghề nghiệp
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      name="inputParOcc"
                      id="inputPacOcc"
                      placeholder="Nghề nghiệp"
                     />

                  </div>
                  <div class="form-group">
                    <label for="inputParType">
                      Phân loại phụ huynh
                    </label>
                    <select
                      id="inputParType"
                      name="inputParType"
                      class="form-control"
                    >
                      <option value="GUARDIAN">
                        Người giám hộ
                      </option>
                      <option value="BIOLOGICAL" selected>
                        Cha/mẹ
                      </option>
                    </select>
                  </div>
                  <div class="d-flex justify-content-end">
                    <a
                      href=""
                      class="badge badge-error parents-form-group-remove-btn"
                    >
                      Xóa
                    </a>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-end">
                <a
                  href="#"
                  class="badge badge-primary p-2"
                  id="x-form-group-add-btn"
                >
                  Thêm cha mẹ/người giám hộ
                </a>
              </div>
            </fieldset>
            <hr />
            <a
              href="#"
              class="btn btn-primary btn-icon-split"
              id="submit-x-btn"
            >
              <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
              </span>
              <span class="text">
                Thêm Học sinh
              </span>
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/button-actions.js"></script>
{{/import}}